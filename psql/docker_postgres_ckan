FROM postgres:9.5
MAINTAINER Open Knowledge

# Customize default user/pass/db
ENV POSTGRES_USER ckan_user
ENV POSTGRES_PASS pass
ENV POSTGRES_DB ckan_default

#ADD ./config/00-init_db.sh /docker-entrypoint-initdb.d/
ADD ./config/01-init_datastore.sh /docker-entrypoint-initdb.d/
RUN chmod 755 /docker-entrypoint-initdb.d/*.sh